<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!--  LegendShop 版权所有, 并保留所有权利。 -->
<hibernate-mapping>
    <class name="com.legendshop.model.entity.UserAddress" table="ls_usr_addr">
        <id name="addrId" type="java.lang.Long">
            <column name="addr_id" />
            <generator class="native" />
        </id>
        <property name="userId" type="java.lang.String">
            <column name="user_id">
                <comment>用户ID</comment>
            </column>
        </property>
        <property name="userName" type="java.lang.String">
            <column name="user_name">
                <comment>用户名称</comment>
            </column>
        </property>
        <property name="receiver" type="java.lang.String">
            <column name="receiver">
                <comment>接受人名称</comment>
            </column>
        </property>
        <property name="subAdds" type="java.lang.String">
            <column name="sub_adds">
                <comment>地址</comment>
            </column>
        </property>
        <property name="subPost" type="java.lang.String">
            <column name="sub_post">
                <comment>邮编</comment>
            </column>
        </property>
        <property name="provinceId" type="java.lang.Integer">
            <column name="province_id">
                <comment>省份ID</comment>
            </column>
        </property>
        <property name="cityId" type="java.lang.Integer">
            <column name="city_id">
                <comment>城市ID</comment>
            </column>
        </property>
         <property name="areaId" type="java.lang.Integer">
            <column name="area_id">
                <comment>区域ID</comment>
            </column>
        </property>
        <property name="mobile" type="java.lang.String">
            <column name="mobile">
                <comment>手机</comment>
            </column>
        </property>
        <property name="telphone" type="java.lang.String">
            <column name="telphone">
                <comment>固话</comment>
            </column>
        </property>
        <property name="email" type="java.lang.String">
            <column name="email">
                <comment>Email地址</comment>
            </column>
        </property>
        <property name="status" type="java.lang.String">
            <column name="status">
                <comment>状态,1正常，0无效</comment>
            </column>
        </property>
        <property name="commonAddr" type="java.lang.String">
            <column name="common_addr">
                <comment>是否常用地址</comment>
            </column>
        </property>
        <property name="createTime" type="java.util.Date">
            <column name="create_time">
                <comment>建立时间</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
