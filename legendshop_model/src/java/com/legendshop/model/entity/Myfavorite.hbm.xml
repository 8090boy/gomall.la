<hibernate-mapping>
    <class name="com.legendshop.model.entity.Myfavorite" table="ls_favorite">
        <id name="id" type="java.lang.String">
            <column name="id" />
            <generator class="native" />
        </id>
        <property name="prodId" type="java.lang.Long">
            <column name="prod_id">
                <comment>商品ID</comment>
            </column>
        </property>
        <property name="prodName" type="java.lang.String">
            <column name="prod_name">
                <comment>收藏的商品名称</comment>
            </column>
        </property>
        <property name="addtime" type="java.util.Date">
            <column name="addtime">
                <comment>收藏时间</comment>
            </column>
        </property>
        <property name="userId" type="java.lang.String">
            <column name="user_id">
                <comment>发表人ID</comment>
            </column>
        </property>
        <property name="userName" type="java.lang.String">
            <column name="user_name">
                <comment>用户名称,备用</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
