<hibernate-mapping>
	<class name="com.legendshop.model.entity.Advertisement" table="ls_adv">
	<!-- 
	 <cache usage="read-write"/>
	  -->
    <id name="id" column="id" type="java.lang.Long">
     <generator class="native" />
	</id>
	<property name="picUrl" column="pic_url" type="java.lang.String" />
	<property name="linkUrl" column="link_url" type="java.lang.String" />
	<property name="userId" column="user_id" type="java.lang.String" />
	<property name="userName" column="user_name" type="java.lang.String" />
	<property name="enabled" column="enabled" type="java.lang.Integer" />
    <property name="type" column="type" type="java.lang.String" />
    <property name="title" column="title" type="java.lang.String" />
    <property name="sourceInput" column="source_input" type="java.lang.String" />
	</class>
</hibernate-mapping>
