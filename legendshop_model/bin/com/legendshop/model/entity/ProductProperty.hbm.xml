<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<!-- 
 * 
 * LegendShop 多用户商城系统
 * 
 *  版权所有,并保留所有权利。
 * 
  -->
<hibernate-mapping>
	<class name="com.legendshop.model.entity.ProductProperty" table="ls_prod_prop">
		<id name="propId" column="prop_id" type="java.lang.Long">
			<generator class="native" />
		</id>
    	<property name="propName" column="prop_name" type="java.lang.String" />
    	<property name="sortId" column="sort_id" type="java.lang.Long" />
    	<property name="memo" column="memo" type="java.lang.String" />
    	<property name="isRequired" column="is_required" type="java.lang.Short" />
    	<property name="isMulti" column="is_multi" type="java.lang.Short" />
    	<property name="sequence" column="sequence" type="java.lang.Long" />
    	<property name="status" column="status" type="java.lang.Short" />
    	<property name="type" column="type" type="java.lang.Short" />
    	<property name="modifyDate" column="modify_date" type="java.util.Date" />
    	<property name="recDate" column="rec_date" type="java.util.Date" />
    	<property name="isKeyProp" column="is_key_prop" type="java.lang.Short" />
    	<property name="isParamProp" column="is_param_prop" type="java.lang.Short" />
    	<property name="isSaleProp" column="is_sale_prop" type="java.lang.Short" />
    	<property name="isForSearch" column="is_for_search" type="java.lang.Short" />
    	<property name="isInputProp" column="is_input_prop" type="java.lang.Short" />
	</class>
</hibernate-mapping>
